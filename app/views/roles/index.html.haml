%h2 Listing Roles

.table-responsive
  %table.table.table-bordered
    %thead
      %tr
        %th Name
        %th Description
        %th Actions
    %tbody
      - @roles.each do |role|
        %tr
          %td= role.name
          %td= role.description
          %td
            = link_to 'Show', role, :class => "btn btn-success btn-sm active", :role => "button"
            = link_to 'Edit', edit_role_path(role), :class => "btn btn-warning btn-sm active", :role => "button"
            = link_to 'Destroy', role, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger btn-sm active", :role => "button"

= link_to 'New Role', new_role_path
